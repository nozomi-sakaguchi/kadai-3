<%= flash[:notice] %>
<div class="container px-5 mt-3">
  <div class="row">

    <%= render 'list', user: @user , book: @book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

      <% @users.each do |user| %>

        <tbody>
          <tr>
            <td></td>
            <td><%= image_tag user.get_profile_image(80,80) %></td>
            <td><%= user.name %></td>
            <td><%= link_to "Show", user_path(user.id) %></td>
          </tr>
        </tbody>
       <% end %>
      </table>
      </div>
    </div>
  </div>
</div>