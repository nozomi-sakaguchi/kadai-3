<div class="show-wrap">

  <div class="left">
  <h2>User info</h2>

  <h2>new book</h2>
  <%= form_with model: @book do |f| %>

    <h4>Title</h4>
      <%=f.text_field :book_title %>






    <h4>Opinion</h4>
      <%= f.text_area :opinion %>
      <%= f.submit 'Create Book' %>
  <% end %>


  </div>


  <h2>book detail</h2>
  <div class="col-md-8 offset-mb-1">
      <h2>Books</h2>
      <table class="table ">
        <thead>
          <tr>
            <th>title</th>
            <th>body</th>
            <th colspan="3"></th>
          </tr>
        </thead>

      <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>

            <td><%= link_to "Destroy", btn btn-red btn-block ,books_path %></td>
          </tr>
        </tbody>
       <% end %>
      </table>






</div>