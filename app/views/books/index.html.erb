<div class="container px-5 mt-3">
  <div class="row mt-3">
     <%= render 'users/list', user: @user %>

    <div class="col-md-8 ml-5 offset-mb-1">
      <h2>Books</h2>
      <table class="table ">
        <thead>
          <tr>
            <th></th>
            <th>title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

      <% @books.each do |book| %>
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(80,80) %></td>
            <td><%= link_to user_path(book.id) do %>
                  <%= book.title %>
                  <% end %></td>
            <td><%= book.body %></td>
            <td colspan="3"></td>
          </tr>
        </tbody>
       <% end %>
      </table>
      </div>
    </div>
  </div>
</div>